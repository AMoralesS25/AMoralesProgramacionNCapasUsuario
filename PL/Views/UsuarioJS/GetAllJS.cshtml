
@{
    ViewBag.Title = "GetAllJS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-people-fill"></i> Usuarios </h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="~/Styles/UsuarioStyleGetAll.css" />


<div id="error"></div>


<button type="button" class="btn btn-primary" onclick="Form()" data-bs-target="#staticBackdrop">
    <i class="bi bi-person-add"></i> Agregar
</button>


<div class="modal fade" id="formulario" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel"><i class="bi bi-person-vcard-fill"></i> Datos</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formFull">
                    <br />
                    <h5><i class="bi bi-person-circle"></i> Usuario</h5>
                    <hr />
                    <input type="hidden" id="txtIdUsuario" />
                    <div class="mb-3 text-center">
                        <label for="UserName" class="form-label">UserName</label>
                        <input type="text" class="form-control mx-auto" id="UserName" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control mx-auto" id="Nombre" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="ApellidoPaterno" class="form-label">Apellido Paterno</label>
                        <input type="text" class="form-control mx-auto" id="ApellidoPaterno" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="ApellidoMaterno" class="form-label">Apellido Materno</label>
                        <input type="text" class="form-control mx-auto" id="ApellidoMaterno" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Email" class="form-label">Email</label>
                        <input type="text" class="form-control mx-auto" id="Email" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Password" class="form-label">Password</label>
                        <input type="text" class="form-control mx-auto" id="Password" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                        <input type="text" class="form-control mx-auto" id="datepicker" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Sexo" class="form-label">Sexo</label><br />
                        <input type="radio" id="m" name="Sexo" value="M">
                        <label for="html">Mujer</label><br>
                        <input type="radio" id="h" name="Sexo" value="H">
                        <label for="css">Hombre</label><br>
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Telefono" class="form-label">Telefono</label>
                        <input type="text" class="form-control mx-auto" id="Telefono" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Celular" class="form-label">Celular</label>
                        <input type="text" class="form-control mx-auto" id="Celular" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="CURP" class="form-label">CURP</label>
                        <input type="text" class="form-control mx-auto" id="CURP" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Rol" class="form-label">Rol</label>
                        <select class="form-select mx-auto" aria-label="Rol" id="ddlRol">
                        </select>
                    </div>
                    <br /><br />
                    <h5><i class="bi bi-geo-alt-fill"></i> Dirección</h5>
                    <hr />
                    <div class="mb-3 text-center">
                        <label for="Calle" class="form-label">Calle</label>
                        <input type="text" class="form-control mx-auto" id="Calle" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="NumeroExterior" class="form-label">Numero Exterior</label>
                        <input type="text" class="form-control mx-auto" id="NumeroExterior" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="NumeroInterior" class="form-label">Numero Interior</label>
                        <input type="text" class="form-control mx-auto" id="NumeroInterior" required style="max-width: 400px;">
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Estado" class="form-label">Estado</label>
                        <select class="form-select mx-auto" aria-label="Estado" id="ddlEstado" onchange="MunicipioGetByIdEstado()">
                        </select>
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Municipio" class="form-label">Municipio</label>
                        <select class="form-select mx-auto" aria-label="Municipio" id="ddlMunicipio" onchange="ColoniaGetByIdMunicipio()">
                        </select>
                    </div>
                    <div class="mb-3 text-center">
                        <label for="Colonia" class="form-label">Colonia</label>
                        <select class="form-select mx-auto" aria-label="Colonia" id="ddlColonia">
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-arrow-left-circle-fill"></i> Cerrar </button>
                <button type="button" class="btn btn-primary" onclick="BtnGuardar()"> <i class="bi bi-floppy-fill"></i> Guardar </button>
            </div>
        </div>
    </div>
</div>





<div class="container">
    <div class="row">
        <div class="col">
            <div class="form-group mt-4">
            </div>
            <div class="table-responsive">
                <table class="table table-bordered border-dark table table-striped">
                    <thead class="table-dark table align-middle">
                        <tr>
                            <th scope="col">Editar</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido Paterno</th>
                            <th scope="col">Apellido Materno</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Fecha de Nacimiento</th>
                            <th scope="col">Sexo</th>
                            <th scope="col">Telefono</th>
                            <th scope="col">Celular</th>
                            <th scope="col">Estatus</th>
                            <th scope="col">CURP</th>
                            <th scope="col">Rol</th>
                            <th scope="col"><div class="size">Dirección</div></th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://code.jquery.com/ui/1.14.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="~/Scripts/jquery-3.7.0.js"></script>
<script src="https://code.jquery.com/ui/1.14.1/jquery-ui.js"></script>

<script>
    var GetAllURL = "@Url.Action("GetAll", "UsuarioJS")";

    var GetAllRolURL = "@Url.Action("DDLRoles", "UsuarioJS")";

    var GetAllEstadoURL = "@Url.Action("DDLEstados", "UsuarioJS")";

    var ddlMunicipioURL = "@Url.Action("GetByIdEstado", "Usuario")?idEstado=";

    var ddlColoniaURL = "@Url.Action("GetByIdMunicipio", "Usuario")?idMunicipio=";

    var AddURL = "@Url.Action("AddUsuario", "UsuarioJS")";

    var UsuarioGetByIdURL = "@Url.Action("UsuarioGetById", "UsuarioJS")?IdUsuario=";

    var UpdateURL = "@Url.Action("UpdateUsuario", "UsuarioJS")";

    var DeleteURL = "@Url.Action("UsuarioDelete", "UsuarioJS")?IdUsuario=";


</script>

