<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Atención</h4>
            </div>
            <div class="modal-body">
                @if (ViewBag.ErroresExcel != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <h4>
                            ¡Hubo errores! Verificalos en la siguiente tabla
                        </h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered border-dark table table-striped">
                            <thead class="table-dark table align-middle">
                                <tr>
                                    <th>Numero de registro</th>
                                    <th>Error</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var error in ViewBag.ErroresExcel)
                                {
                                    <tr>
                                        <td> @error.NumeroRegistro</td>
                                        <td> @Html.Raw(error.ErrorMessage.Replace(".", ".<br>"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                }
                @if (ViewBag.Errores != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <h4>@ViewBag.Errores</h4>
                    </div>
                }
                @if (ViewBag.MensajeVerificado != null)
                {
                    <div class="alert alert-success" role="alert">
                        <h4>@ViewBag.MensajeVerificado</h4>
                    </div>

                }
                <div class="modal-footer">
                    @Html.ActionLink("Cerrar", "GetAll", "Usuario", new { area = "" }, htmlAttributes: new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    </div>
    <script>$('#Modal').modal();</script>

